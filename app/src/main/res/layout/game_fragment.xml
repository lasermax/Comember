<?xml version="1.0" encoding="utf-8"?>
<com.project.comember.ui.widgets.GameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/game_button_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameFragment"
    app:layoutDescription="@xml/game_fragment_scene">

    <View
        android:id="@id/click_to_start_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:background="@color/dark_grey"
        android:translationZ="1dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent" />


    <com.project.comember.ui.widgets.BlinkingTextView
        android:id="@id/click_to_start_text_view"
        style="@style/bigger_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="#00000000"
        android:text="@string/click_to_start"
        android:translationZ="2dp"
        custom:layout_constraintBottom_toBottomOf="@id/click_to_start_background"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent" />

    <com.project.comember.ui.widgets.GameScoreCounter
        android:id="@id/game_score_counter"
        style="@style/highscore_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent" />


    <com.project.comember.ui.widgets.GameButton
        android:id="@+id/game_button_red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        custom:highlightColor="@color/main_red_highlight"
        custom:layout_constraintBottom_toTopOf="@+id/game_button_green"
        custom:layout_constraintDimensionRatio="1:1"
        custom:layout_constraintEnd_toStartOf="@+id/game_button_blue"
        custom:layout_constraintHorizontal_chainStyle="packed"
        custom:layout_constraintStart_toStartOf="@+id/guideline2"
        custom:layout_constraintTop_toBottomOf="@+id/game_score_counter"
        custom:layout_constraintVertical_chainStyle="packed"
        custom:mainColor="@color/main_red" />

    <com.project.comember.ui.widgets.GameButton
        android:id="@+id/game_button_blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="90"
        custom:highlightColor="@color/main_blue_highlight"
        custom:layout_constraintBottom_toTopOf="@+id/game_button_yellow"
        custom:layout_constraintDimensionRatio="1:1"
        custom:layout_constraintEnd_toStartOf="@+id/guideline3"
        custom:layout_constraintStart_toEndOf="@+id/game_button_red"
        custom:layout_constraintTop_toBottomOf="@+id/game_score_counter"
        custom:layout_constraintVertical_chainStyle="packed"
        custom:mainColor="@color/main_blue" />

    <com.project.comember.ui.widgets.GameButton
        android:id="@+id/game_button_yellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="180"
        custom:highlightColor="@color/main_yellow_highlight"
        custom:layout_constraintBottom_toTopOf="@+id/guideline6"
        custom:layout_constraintDimensionRatio="1:1"
        custom:layout_constraintEnd_toStartOf="@+id/guideline3"
        custom:layout_constraintStart_toEndOf="@id/game_button_green"
        custom:layout_constraintTop_toBottomOf="@+id/game_button_blue"
        custom:mainColor="@color/main_yellow" />

    <com.project.comember.ui.widgets.GameButton
        android:id="@+id/game_button_green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="270"
        custom:highlightColor="@color/main_green_highlight"
        custom:layout_constraintBottom_toTopOf="@+id/guideline6"
        custom:layout_constraintDimensionRatio="1:1"
        custom:layout_constraintEnd_toStartOf="@+id/game_button_yellow"
        custom:layout_constraintHorizontal_chainStyle="packed"
        custom:layout_constraintStart_toStartOf="@+id/guideline2"
        custom:layout_constraintTop_toBottomOf="@+id/game_button_red"
        custom:mainColor="@color/main_green" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        custom:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        custom:layout_constraintGuide_end="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        custom:layout_constraintGuide_end="32dp" />

    <com.project.comember.misc.ClickableGroup
        android:id="@+id/click_to_start_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:constraint_referenced_ids="click_to_start_background,click_to_start_text_view" />


</com.project.comember.ui.widgets.GameLayout>